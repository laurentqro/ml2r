<% if flash.any? %>
  <div class="container mx-auto px-4">
    <% flash.each do |type, message| %>
      <div class="flex items-center justify-center w-full transition-opacity duration-300 animate-fadeIn" role="alert">
        <% case type.to_sym %>
        <% when :notice, :success %>
          <div class="alert alert-success shadow-sm py-2 px-4">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75 11.25 15 15 9.75M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
            </svg>
            <span><%= message %></span>
          </div>
        <% when :alert, :error %>
          <div class="alert alert-error shadow-sm py-2 px-4">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m9.344 5.25h-18.75a1.125 1.125 0 0 1-.996-1.636L9.75 3.75a1.125 1.125 0 0 1 1.996 0l7.151 12.324a1.125 1.125 0 0 1-.996 1.636Zm-9.344 1.5h.008v.008H12v-.008Z" />
            </svg>
            <span><%= message %></span>
          </div>
        <% when :warning %>
          <div class="alert alert-warning shadow-sm py-2 px-4">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m-9.303 3.376c-.866 1.5.217 3.374 1.948 3.374h14.71c1.73 0 2.813-1.874 1.948-3.374L13.949 3.378c-.866-1.5-3.032-1.5-3.898 0L2.697 16.126ZM12 15.75h.007v.008H12v-.008Z" />
            </svg>
            <span><%= message %></span>
          </div>
        <% else %>
          <div class="alert alert-info shadow-sm py-2 px-4">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="m11.25 11.25.041-.02a.75.75 0 0 1 1.063.852l-.708 2.836a.75.75 0 0 0 1.063.853l.041-.021M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Zm-9-3.75h.008v.008H12V8.25Z" />
            </svg>
            <span><%= message %></span>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
<% end %>
