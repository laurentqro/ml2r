<div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-6">
  <div class="stat bg-base-100 shadow rounded-box">
    <div class="stat-figure text-success">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
      </svg>
    </div>
    <div class="stat-title">Clear</div>
    <div class="stat-value text-success"><%= clear_count %></div>
    <div class="stat-desc">Clients with no risk flags</div>
  </div>
  
  <div class="stat bg-base-100 shadow rounded-box">
    <div class="stat-figure <%= with_adverse_media_count.positive? ? 'text-warning' : 'text-success' %>">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
      </svg>
    </div>
    <div class="stat-title">Adverse Media</div>
    <div class="stat-value <%= with_adverse_media_count.positive? ? 'text-warning' : 'text-success' %>"><%= with_adverse_media_count %></div>
    <div class="stat-desc">Clients with adverse media mentions</div>
  </div>
  
  <div class="stat bg-base-100 shadow rounded-box">
    <div class="stat-figure <%= pep_count.positive? ? 'text-error' : 'text-success' %>">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
      </svg>
    </div>
    <div class="stat-title">PEP</div>
    <div class="stat-value <%= pep_count.positive? ? 'text-error' : 'text-success' %>"><%= pep_count %></div>
    <div class="stat-desc">Politically exposed persons</div>
  </div>
  
  <div class="stat bg-base-100 shadow rounded-box">
    <div class="stat-figure <%= sanctioned_count.positive? ? 'text-error' : 'text-success' %>">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
      </svg>
    </div>
    <div class="stat-title">Sanctioned</div>
    <div class="stat-value <%= sanctioned_count.positive? ? 'text-error' : 'text-success' %>"><%= sanctioned_count %></div>
    <div class="stat-desc">Clients on sanctions lists</div>
  </div>
</div>
