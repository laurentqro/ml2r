<% content_for :title, "People" %>

<h1 class="text-2xl font-bold py-4">Clients</h1>

<div class="container mx-auto">
  <div class="flex justify-between items-center">
    <div>
      <h1 class="text-xl font-semibold">Persons</h1>
    </div>
  </div>

  <div class="mt-8">
    <div class="overflow-x-auto">
      <table class="table table-zebra w-full">
        <thead>
          <tr>
            <th>Last Name</th>
            <th>Profession</th>
            <th>PEP</th>
            <th>Sanctioned</th>
            <th>
              <span class="sr-only">Edit</span>
            </th>
          </tr>
        </thead>
        <tbody>
          <% @people.each do |person| %>
            <tr>
              <td><%= link_to person.last_first_name, person, class: "link link-hover" %></td>
              <td><%= Occupation.find_by(unit: person.profession)&.description %></td>
              <td><%= person.pep %></td>
              <td><%= person.sanctioned %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

