<div class="document-fields bg-base-200 p-4 rounded-lg mt-4 border border-base-300" data-new-record="<%= f.object.new_record? %>">
  <div class="flex justify-between items-start mb-3">
    <h3 class="font-medium flex items-center gap-2">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-primary" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4zm2 6a1 1 0 011-1h6a1 1 0 110 2H7a1 1 0 01-1-1zm1 3a1 1 0 100 2h6a1 1 0 100-2H7z" clip-rule="evenodd" />
      </svg>
      Identification Document
    </h3>
    
    <button type="button" data-action="document-form#remove" class="btn btn-error btn-sm btn-circle">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
      </svg>
    </button>
  </div>
  
  <div class="grid grid-cols-1 gap-4 sm:grid-cols-3">
    <div class="form-control">
      <%= f.label :document_type, class: "label pb-1" do %>
        <span class="label-text flex items-center gap-1">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-base-content/70" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4z" clip-rule="evenodd" />
          </svg>
          Document Type
        </span>
      <% end %>
      <div class="relative">
        <%= f.select :document_type,
            Person::DOCUMENT_TYPES,
            { prompt: "Select type" },
            { required: true,
              class: "select select-bordered w-full" } %>
      </div>
    </div>

    <div class="form-control">
      <%= f.label :number, class: "label pb-1" do %>
        <span class="label-text flex items-center gap-1">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-base-content/70" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M13 7a1 1 0 100-2h-2V3a1 1 0 10-2 0v2H7a1 1 0 000 2h2v2a1 1 0 102 0V7h2z" clip-rule="evenodd" />
            <path fill-rule="evenodd" d="M7 13a1 1 0 100-2H5V9a1 1 0 10-2 0v2H1a1 1 0 100 2h2v2a1 1 0 102 0v-2h2z" clip-rule="evenodd" />
          </svg>
          Document Number
        </span>
      <% end %>
      <%= f.text_field :number, required: true, class: "input input-bordered w-full", placeholder: "Enter document number" %>
    </div>

    <div class="form-control">
      <%= f.label :expiration_date, class: "label pb-1" do %>
        <span class="label-text flex items-center gap-1">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-base-content/70" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd" />
          </svg>
          Expiration Date
        </span>
      <% end %>
      <%= f.date_field :expiration_date, required: true, class: "input input-bordered w-full" %>
    </div>
  </div>

  <div class="mt-4">
    <label class="label cursor-pointer inline-flex items-center gap-2 bg-base-300 px-3 py-2 rounded-lg">
      <%= f.check_box :is_copy, class: "checkbox checkbox-primary" %>
      <span class="label-text flex items-center gap-1">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-base-content/70" viewBox="0 0 20 20" fill="currentColor">
          <path d="M9 2a2 2 0 00-2 2v8a2 2 0 002 2h6a2 2 0 002-2V6.414A2 2 0 0016.414 5L14 2.586A2 2 0 0012.586 2H9z" />
          <path d="M3 8a2 2 0 012-2v10h8a2 2 0 01-2 2H5a2 2 0 01-2-2V8z" />
        </svg>
        This is a copy
      </span>
    </label>
  </div>
</div>
