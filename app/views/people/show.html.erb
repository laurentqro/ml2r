<% content_for :title, "#{@person.display_name}" %>

<div class="bg-white shadow rounded-lg p-6">
  <div class="flex items-center justify-between">
    <h1><%= @person.display_name %></h1>

    <div class="flex items-center gap-4">
      <div class="flex gap-2">
        <% if @person.pep? %>
          <span class="px-3 py-1 text-sm font-semibold text-white bg-red-600 rounded-full">PEP</span>
        <% end %>

        <% if @person.sanctioned? %>
          <span class="px-3 py-1 text-sm font-semibold text-white bg-red-600 rounded-full">Sanctioned</span>
        <% end %>
      </div>
    </div>

    <%= link_to edit_person_path(@person), class: "btn-primary inline-flex items-center gap-2" do %>
      <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L10.582 16.07a4.5 4.5 0 01-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 011.13-1.897l8.932-8.931zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0115.75 21H5.25A2.25 2.25 0 013 18.75V8.25A2.25 2.25 0 015.25 6H10" />
      </svg>
      Edit
    <% end %>
  </div>

  <div class="border-t pt-4">
    <%= render @person %>
  </div>
</div>

<div class="bg-white shadow rounded-lg p-6 mt-4">
  <h2>Screenings</h2>

  <div id="screenings_list" class="space-y-2 mb-6">
    <% @person.screenings.reverse.each do |screening| %>
      <%= render screening %>
    <% end %>
  </div>
</div>
