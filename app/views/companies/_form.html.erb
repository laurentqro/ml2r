<div class="max-w-3xl mx-auto">
  <%= form_with(model: company, data: { turbo: false }, class: "card bg-base-100 shadow border border-base-200") do |f| %>
    <div class="card-body p-6">
      <% if company.errors.any? %>
        <div class="alert alert-error mb-6 shadow-sm">
          <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-5 w-5" fill="none" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
          <span><%= pluralize(company.errors.count, "error") %> prohibited this company from being saved</span>
        </div>
      <% end %>

      <div class="space-y-6">
        <div>
          <h2 class="text-xl font-semibold text-base-content">
            Company Information
          </h2>
          <p class="text-sm text-base-content/60 mt-1">
            Please provide accurate information for AML compliance purposes.
          </p>
        </div>

        <div class="divider my-2"></div>
        
        <div class="space-y-4">
          <div class="form-control w-full">
            <%= f.label :name, class: "label text-sm font-medium" %>
            <%= f.text_field :name, class: "input input-bordered w-full focus:input-primary", placeholder: "Enter company name" %>
          </div>

          <div class="form-control w-full">
            <%= render "shared/searchable_country_field", f: f, field_name: :country %>
          </div>
        </div>
      </div>

      <div class="flex justify-end gap-3 mt-8 pt-2 border-t border-base-200">
        <%= link_to clients_path, class: "btn btn-ghost" do %>
          Cancel
        <% end %>

        <%= f.submit class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>
