<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <h2 class="text-2xl font-bold text-gray-900 sm:text-3xl">
    Screening results for <%= @client.clientable.display_name %>
  </h2>

  <p class="mt-2 text-sm text-gray-600">
    Screening run on <%= @screening.created_at.strftime("%B %d, %Y at %I:%M%p") %>
  </p>

  <div class="mt-8 space-y-6">
    <% @matches.each do |match| %>
      <div class="bg-white rounded-lg shadow p-6 border border-gray-200">
        <div class="flex justify-between items-start">
          <div class="flex-grow">
            <div class="flex items-center space-x-2">
              <span class="text-lg font-medium">Match Score:</span>
              <span class="px-3 py-1 rounded-full <%= match_score_classes(match.score) %>">
                <%= match.score %>
              </span>
            </div>
            
            <div class="mt-6 grid grid-cols-1 md:grid-cols-2 gap-6">
              <div class="space-y-1">
                <p class="text-sm font-medium text-gray-500">Type</p>
                <p class="text-gray-900"><%= match.schema %></p>
              </div>

              <div class="space-y-1">
                <p class="text-sm font-medium text-gray-500">Name</p>
                <p class="text-gray-900"><%= match.name %></p>
              </div>

              <% if match.aliases.any? %>
                <div class="col-span-2 space-y-1">
                  <p class="text-sm font-medium text-gray-500">Aliases</p>
                  <p class="text-gray-900"><%= match.aliases.join(", ") %></p>
                </div>
              <% end %>

              <% if match.nationality.present? %>
                <div class="space-y-1">
                  <p class="text-sm font-medium text-gray-500">Nationality</p>
                  <p class="text-gray-900"><%= ISO3166::Country[match.nationality]&.iso_short_name %></p>
                </div>
              <% end %>

              <% if match.birth_date.present? %>
                <div class="space-y-1">
                  <p class="text-sm font-medium text-gray-500">Date of Birth</p>
                  <p class="text-gray-900"><%= match.birth_date %></p>
                </div>
              <% end %>

              <div class="col-span-2 space-y-1">
                <p class="text-sm font-medium text-gray-500">Sanctions Lists</p>
                <ul class="list-disc pl-5 text-gray-900">
                  <% match.sanctions.each do |dataset| %>
                    <li><%= dataset %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
