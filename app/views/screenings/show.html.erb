<div class="container mx-auto py-8">
  <div class="mb-4">
    <%= link_to @screening.screenable, class: "btn btn-ghost btn-sm gap-1" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
      </svg>
      Back to <%= @screening.screenable_type %>
    <% end %>
  </div>

  <div class="flex items-center justify-between">
    <div>
      <h2 class="text-3xl font-bold">
        Screening results for <%= @screening.screenable.display_name %>
      </h2>
      <p class="text-sm text-base-content/60 mt-2">
        Screening run on <%= @screening.created_at.strftime("%B %d, %Y at %I:%M%p") %>
      </p>
    </div>
  </div>

  <div class="mt-8 space-y-6">
    <% if @matches.any? %>
      <% @matches.each do |match| %>
        <%= render match %>
      <% end %>
    <% else %>
      <p class="text-base-content/60">No matches found</p>
    <% end %>
  </div>
</div>