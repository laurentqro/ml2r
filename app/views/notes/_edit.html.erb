<%= turbo_frame_tag "note" do %>
  <div data-controller="inline-edit">
    <%= form_with(model: client,
                  url: update_notes_client_path(client),
                  method: :patch,
                  data: {
                    inline_edit_target: "form",
                    action: "keydown->inline-edit#keydown"
                  }) do |form| %>
      <div class="card bg-base-100 shadow-xl">
        <div class="card-body">
          <div class="flex justify-between items-start mb-4">
            <h3 class="card-title">Notes</h3>
          </div>

          <div class="form-control mb-4 w-full">
            <%= form.text_area :notes,
                            class: "textarea textarea-bordered h-48 w-full",
                            placeholder: "Enter notes here" %>
          </div>

          <div class="card-actions justify-end">
            <%= link_to "Cancel", client_path(client),
                      class: "btn btn-ghost" %>
            <%= form.submit "Save",
                         class: "btn btn-primary",
                         data: { inline_edit_target: "submitButton" } %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
