<%= turbo_frame_tag "note" do %>
  <div class="card bg-base-100 mb-4">
    <div class="card-body">
      <div class="flex justify-between items-start">
        <h3 class="card-title">Notes</h3>
        <%= link_to "Edit", edit_notes_client_path(client, format: :turbo_stream),
                  class: "link link-primary",
                  data: { turbo_prefetch: false } %>
      </div>

      <div class="prose max-w-none">
        <% if client.notes.present? %>
          <p class="whitespace-pre-wrap"><%= client.notes %></p>
        <% else %>
          <p class="italic text-base-content/60">No notes available</p>
        <% end %>
      </div>
    </div>
  </div>
<% end %>