<div class="bg-white shadow ring-1 ring-gray-300 sm:rounded-lg overflow-hidden">
  <table class="min-w-full divide-y divide-gray-300">
    <thead class="bg-gray-50">
      <tr class="border-x border-gray-300">
        <th scope="col" class="w-96 py-3.5 pl-4 pr-3 text-left text-sm font-semibold sm:pl-6 first:sm:rounded-tl-lg border-r border-gray-300">
          <%= sortable "display_name", "Name" %>
        </th>
        <th scope="col" class="px-3 py-2 text-center text-sm font-semibold text-gray-900 border-b border-gray-300">
          Screening
        </th>
      </tr>
    </thead>
    <tbody class="divide-y divide-gray-200 bg-white">
      <% if prospects.any? %>
        <% prospects.each_with_index do |prospect, index| %>
          <tr class="border-x border-gray-300">
            <td class="w-1/3 py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:pl-6 <%= 'sm:rounded-bl-lg' if index == prospects.size - 1 %>">
              <%= link_to prospect.display_name, prospect_path(prospect),
                  class: "text-blue-600 hover:text-blue-800 line-clamp-2", data: { turbo: false } %>
            </td>
            <td class="border-l border-gray-300 w-96 py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:pl-6 <%= 'sm:rounded-bl-lg' if index == prospects.size - 1 %>">
              <div class="max-w-md flex items-center justify-between">
                <div class="flex gap-2 flex-shrink-0 ml-2">
                  <% if prospect.pep? %>
                    <span class="inline-flex items-center rounded-md bg-yellow-50 px-2 py-1 text-xs font-medium text-yellow-800 ring-1 ring-inset ring-yellow-600/20">
                      PEP
                    </span>
                  <% end %>
                  <% if prospect.sanctioned %>
                    <span class="inline-flex items-center rounded-md bg-red-50 px-2 py-1 text-xs font-medium text-red-800 ring-1 ring-inset ring-red-600/20">
                      Sanctioned
                    </span>
                  <% end %>
                </div>
              </div>
            </td>
          </tr>
        <% end %>
      <% else %>
        <tr class="border-x border-gray-300">
          <td colspan="7" class="py-8 text-center text-gray-500 italic">
            No prospects found matching your search criteria.
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div> 