<div class="bg-white shadow ring-1 ring-gray-300 sm:rounded-lg overflow-hidden">
  <table class="min-w-full divide-y divide-gray-300">
    <thead class="bg-gray-50">
      <tr class="border-x border-gray-300">
        <th scope="col" class="w-96 py-3.5 pl-4 pr-3 text-left text-sm font-semibold sm:pl-6 first:sm:rounded-tl-lg border-r border-gray-300">
          <%= sortable "display_name", "Name" %>
        </th>
        <th scope="col" class="px-3 py-2 text-center text-sm font-semibold text-gray-900 border-b border-gray-300">
          Screening
        </th>
      </tr>
    </thead>

    <tbody class="divide-y divide-gray-200 bg-white">
      <% if prospects.any? %>
        <% prospects.each do |prospect| %>
          <%= render "prospect", prospect: prospect %>
        <% end %>
      <% elsif params[:query].present? %>
        <tr class="border-x border-gray-300">
          <td colspan="2" class="py-8 text-center text-gray-500 italic">
            No prospect found matching your search criteria.
          </td>
        </tr>
      <% else %>
        <tr class="border-x border-gray-300">
          <td colspan="2" class="py-8 text-center text-gray-500 italic">
            Create your first prospect:
            <%= link_to "Create Person Prospect", new_person_path, class: "btn-primary", data: { turbo: false } %>
            <%= link_to "Create Company Prospect", new_company_path, class: "btn-primary", data: { turbo: false } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div> 