<% content_for :title, "Prospects" %>

<div class="container mx-auto px-4 py-6">
  <!-- Page Header -->
  <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-6">
    <div>
      <h1 class="text-2xl font-bold flex items-center gap-2">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
        </svg>
        Prospects
      </h1>
      <p class="text-sm text-base-content/70">Manage and screen potential clients before onboarding</p>
    </div>
    
    <div class="mt-4 md:mt-0">
      <div class="join">
        <%= link_to new_person_path, class: "btn btn-primary join-item", data: { turbo: false } do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
            <path d="M8 9a3 3 0 100-6 3 3 0 000 6zM8 11a6 6 0 016 6H2a6 6 0 016-6zM16 7a1 1 0 10-2 0v1h-1a1 1 0 100 2h1v1a1 1 0 102 0v-1h1a1 1 0 100-2h-1V7z" />
          </svg>
          Add Person
        <% end %>
        <%= link_to new_company_path, class: "btn btn-primary join-item", data: { turbo: false } do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h8a2 2 0 012 2v12a1 1 0 110 2h-3a1 1 0 01-1-1v-2a1 1 0 00-1-1H9a1 1 0 00-1 1v2a1 1 0 01-1 1H4a1 1 0 110-2V4zm3 1h2v2H7V5zm2 4H7v2h2V9zm2-4h2v2h-2V5zm2 4h-2v2h2V9z" clip-rule="evenodd" />
          </svg>
          Add Company
        <% end %>
      </div>
    </div>
  </div>

  <!-- Statistics Cards -->
  <%= render "shared/statistics",
    clear_count: @clear_count,
    pep_count: @pep_count,
    sanctioned_count: @sanctioned_count,
    with_adverse_media_count: @with_adverse_media_count
  %>

  <!-- Tabs and Search -->
  <div class="card bg-base-100 shadow-md mb-6">
    <div class="card-body p-4">
      <%= render "tabs" %>
      
      <div class="mt-4">
        <%= render "search" %>
      </div>
    </div>
  </div>

  <!-- Results Section -->
  <div class="card bg-base-100 shadow-md">
    <div class="card-body p-0">
      <%= turbo_frame_tag "search_results" do %>
        <!-- Pagination Top -->
        <div id="prospects_pagination" class="p-4 border-b border-base-200">
          <%= render 'shared/pagination', collection: @prospects %>
        </div>

        <!-- Table -->
        <div id="prospects_table">
          <%= render "table", prospects: @prospects %>
        </div>

        <!-- Pagination Bottom -->
        <div id="prospects_pagination" class="p-4 border-t border-base-200">
          <%= render 'shared/pagination', collection: @prospects %>
        </div>
      <% end %>
    </div>
  </div>
</div>
