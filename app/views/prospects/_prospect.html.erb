<tr class="hover">
  <td>
    <%= link_to prospect_path(prospect), class: "flex items-center gap-2", data: { turbo: false } do %>
      <% if prospect.is_a?(Person) %>
        <div class="avatar placeholder">
          <div class="bg-neutral text-neutral-content rounded-full w-8">
            <span><%= prospect.display_name.first.upcase %></span>
          </div>
        </div>
      <% else %>
        <div class="avatar placeholder">
          <div class="bg-primary text-primary-content rounded w-8">
            <span><%= prospect.display_name.first.upcase %></span>
          </div>
        </div>
      <% end %>
      <div>
        <div class="font-medium"><%= prospect.display_name %></div>
        <div class="text-xs text-base-content/60">
          <%= prospect.is_a?(Person) ? "Person" : "Company" %>
          <% if prospect.created_at %>
            â€¢ Added <%= time_ago_in_words(prospect.created_at) %> ago
          <% end %>
        </div>
      </div>
    <% end %>
  </td>

  <td>
    <div class="flex flex-wrap justify-center gap-2">
      <% if prospect.pep? %>
        <div class="badge badge-warning gap-1">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 2a1 1 0 00-1 1v1a1 1 0 002 0V3a1 1 0 00-1-1zM4 4h3a3 3 0 006 0h3a2 2 0 012 2v9a2 2 0 01-2 2H4a2 2 0 01-2-2V6a2 2 0 012-2zm2.5 7a1.5 1.5 0 100-3 1.5 1.5 0 000 3zm2.45 4a2.5 2.5 0 10-4.9 0h4.9zM12 9a1 1 0 100 2h3a1 1 0 100-2h-3zm-1 4a1 1 0 011-1h2a1 1 0 110 2h-2a1 1 0 01-1-1z" clip-rule="evenodd" />
          </svg>
          PEP
        </div>
      <% end %>

      <% if prospect.sanctioned? %>
        <div class="badge badge-error gap-1">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M13.477 14.89A6 6 0 015.11 6.524l8.367 8.368zm1.414-1.414L6.524 5.11a6 6 0 018.367 8.367zM18 10a8 8 0 11-16 0 8 8 0 0116 0z" clip-rule="evenodd" />
          </svg>
          Sanctioned
        </div>
      <% end %>

      <% if prospect.has_adverse_media? %>
        <div class="badge badge-warning gap-1">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M18 3a1 1 0 00-1.447-.894L8.763 6H5a3 3 0 000 6h.28l1.771 5.316A1 1 0 008 18h1a1 1 0 001-1v-4.382l6.553 3.276A1 1 0 0018 15V3z" clip-rule="evenodd" />
          </svg>
          Adverse Media
        </div>
      <% end %>
      
      <% if !prospect.pep? && !prospect.sanctioned? && !prospect.has_adverse_media? %>
        <div class="badge badge-success gap-1">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
          </svg>
          Clear
        </div>
      <% end %>
    </div>
  </td>
</tr>
