<div class="bg-white shadow rounded-lg p-6 mt-4">
  <h2>Country Risk Assessment</h2>

  <div class="space-y-4">
    <% if client.country_of_residence.present? %>
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm font-bold">
            <%= client.clientable_type == "Company" ? "Country of Incorporation" : "Country of Residence" %>:
            <span class="text-sm text-gray-500"><%= country_name(client.country_of_residence) %></span>
          </p>
        </div>
        <span class="inline-flex items-center rounded-md px-2 py-1 text-xs font-medium <%= risk_badge_class(CountryRiskScorer.calculate_risk_score(client.country_of_residence)) %>">
          <%= CountryRiskScorer.calculate_risk_score(client.country_of_residence) %>
        </span>
      </div>
    <% end %>

    <% if client.nationality.present? %>
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm font-bold">
            Country of Nationality:
            <span class="text-sm text-gray-500"><%= country_name(client.nationality) %></span>
          </p>
        </div>
        <span class="inline-flex items-center rounded-md px-2 py-1 text-xs font-medium <%= risk_badge_class(CountryRiskScorer.calculate_risk_score(client.nationality)) %>">
          <%= CountryRiskScorer.calculate_risk_score(client.nationality) %>
        </span>
      </div>
    <% end %>

    <% if client.country_of_profession.present? %>
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm font-bold">
            Country of Profession:
            <span class="text-sm text-gray-500"><%= country_name(client.country_of_profession) %></span>
          </p>
        </div>
        <span class="inline-flex items-center rounded-md px-2 py-1 text-xs font-medium <%= risk_badge_class(CountryRiskScorer.calculate_risk_score(client.country_of_profession)) %>">
          <%= CountryRiskScorer.calculate_risk_score(client.country_of_profession) %>
        </span>
      </div>
    <% end %>

    <% if client.country_of_birth.present? %>
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm font-bold">
            Country of Birth:
            <span class="text-sm text-gray-500"><%= country_name(client.country_of_birth) %></span>
          </p>
        </div>
        <span class="inline-flex items-center rounded-md px-2 py-1 text-xs font-medium <%= risk_badge_class(CountryRiskScorer.calculate_risk_score(client.country_of_birth)) %>">
          <%= CountryRiskScorer.calculate_risk_score(client.country_of_birth) %>
        </span>
      </div>
    <% end %>

    <div class="border-t pt-4 mt-4">
      <div class="flex items-center justify-between">
        <span class="text-base font-bold text-gray-900">Total</span>
        <span class="inline-flex items-center rounded-md px-3 py-1.5 text-sm font-medium <%= risk_badge_class(client.country_risk_score) %>">
          <%= client.country_risk_score %>
        </span>
      </div>
    </div>
  </div>
</div> 
