<div class="flex items-center justify-between">
  <div class="mb-4 text-sm text-gray-500">
    <p>Created on <%= @risk_assessment.created_at.strftime("%d %B %Y at %H:%M") %></p>
  </div>
</div>

<div class="mb-6">
  <div class="flex items-center justify-between">
    <% if @risk_assessment.approved? %>
      <span class="text-green-500"> ✅ Approved on <%= @risk_assessment.approved_at.strftime("%d %B %Y at %H:%M") %></span>
    <% else %>
      <span class="text-orange-500"> ⏳ Pending Approval</span>
    <% end %>
  </div>
</div>

<%= render "country_risk_scores", client: @client %>
<%= render "risk_factor_scores", risk_assessment: @risk_assessment %>
<%= render "total_risk_score", risk_assessment: @risk_assessment %>

<div class="mt-4">
  <div class="bg-white shadow rounded-lg p-6">
    <h3>Notes</h3>
    <%= @risk_assessment.notes %>
  </div>
</div>

<% if @risk_assessment.approved_at.blank? %>
  <div class="mt-4">
    <%= button_to "Approve Risk Assessment",
        approve_client_risk_assessment_path(@client, @risk_assessment),
        method: :patch,
        class: "rounded-md px-3.5 py-2.5 text-white bg-green-600 hover:bg-green-500 font-medium cursor-pointer",
        data: { turbo_confirm: "Are you sure you want to approve this risk assessment?" } %>
  </div>
<% end %>