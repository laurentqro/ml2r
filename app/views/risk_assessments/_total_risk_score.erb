<% if RiskFactorDefinition.categories.any? { |category| @risk_assessment.risk_factors.where(category: category).any? } %>
    <div class="card bg-base-100 mt-4">
      <div class="card-body">
        <div class="flex flex-col">
          <div class="flex items-center justify-between">
            <div>
              <span class="text-lg font-bold">Overall Risk Score</span>
              <p class="mt-1 text-xs text-base-content/70">
                <% if @risk_assessment.created_at %>
                  Calculated on <%= @risk_assessment.created_at.strftime("%B %d, %Y at %H:%M") %>
                <% else %>
                  No risk assessment available
                <% end %>
              </p>
            </div>
            <span class="badge <%= risk_badge_class(@risk_assessment.total_risk_score).include?('red') ? 'badge-error' : risk_badge_class(@risk_assessment.total_risk_score).include?('yellow') ? 'badge-warning' : risk_badge_class(@risk_assessment.total_risk_score).include?('green') ? 'badge-success' : 'badge-info' %> badge-lg">
              <%= @risk_assessment.total_risk_score %>
            </span>
          </div>
        </div>
      </div>
    </div>
<% end %>
