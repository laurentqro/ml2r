<div class="container mx-auto px-4 py-8 max-w-[1600px]">
    <div class="mb-6">
      <h1>Risk Factor Definitions</h1>
    </div>
    <div class="flex justify-center mb-8">
      <%= link_to "New Risk Factor Definition", new_admin_risk_factor_definition_path, class: "btn btn-primary" %>
    </div>

  <!-- Group all risk factor definitions by category -->
  <%
    person_definitions_by_category = @risk_factor_definitions.select { |d| d.entity_type == "Person" }.group_by(&:category)
    company_definitions_by_category = @risk_factor_definitions.select { |d| d.entity_type == "Company" }.group_by(&:category)
    all_categories = (person_definitions_by_category.keys + company_definitions_by_category.keys).uniq
  %>

  <!-- Section headers -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-6">
    <h2>Person Risk Factors</h2>
    <h2>Company Risk Factors</h2>
  </div>

    <!-- Categories -->
    <% all_categories.each do |category| %>
      <div class="mb-8">
        <h3><%= category.humanize.titleize %></h3>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <!-- Person Risk Factors -->
          <div class="min-w-0">
            <% person_definitions = person_definitions_by_category[category] || [] %>
            <% if person_definitions.any? %>
              <div class="card bg-base-100 overflow-x-auto">
                <div class="card-body p-0">
                  <table class="table table-zebra w-full">
                    <thead>
                      <tr>
                        <th>Description</th>
                        <th class="text-center">Score</th>
                        <th class="text-center">Actions</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% person_definitions.sort_by(&:score).reverse.each do |definition| %>
                        <tr class="hover">
                          <td class="whitespace-normal">
                            <div><%= definition.description %></div>
                          </td>
                          <td class="text-center">
                            <div><%= definition.score %></div>
                          </td>
                          <td class="text-center">
                            <div class="flex justify-center space-x-2">
                              <%= link_to edit_admin_risk_factor_definition_path(definition), class: "btn btn-circle btn-ghost btn-sm" do %>
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                                </svg>
                              <% end %>

                              <%= button_to admin_risk_factor_definition_path(definition), method: :delete, class: "btn btn-circle btn-ghost btn-sm text-error", form: { data: { turbo_confirm: "Are you sure you want to delete this risk factor definition?" } } do %>
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                </svg>
                              <% end %>
                            </div>
                          </td>
                        </tr>
                      <% end %>
                    </tbody>
                  </table>
                </div>
              </div>
            <% else %>
              <div class="alert text-center py-4 bg-base-200 rounded-box">
                <p class="text-base-content/60">No person risk factors defined for this category.</p>
              </div>
            <% end %>
          </div>

          <!-- Company Risk Factors -->
          <div class="min-w-0">
            <% company_definitions = company_definitions_by_category[category] || [] %>
            <% if company_definitions.any? %>
              <div class="card bg-base-100 overflow-x-auto">
                <div class="card-body p-0">
                  <table class="table table-zebra w-full">
                    <thead>
                      <tr>
                        <th>Description</th>
                        <th class="text-center">Score</th>
                        <th class="text-center">Actions</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% company_definitions.sort_by(&:score).reverse.each do |definition| %>
                        <tr class="hover">
                          <td class="whitespace-normal">
                            <div><%= definition.description %></div>
                          </td>
                          <td class="text-center">
                            <div><%= definition.score %></div>
                          </td>
                          <td class="text-center">
                            <div class="flex justify-center space-x-2">
                              <%= link_to edit_admin_risk_factor_definition_path(definition), class: "btn btn-circle btn-ghost btn-sm" do %>
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                                </svg>
                              <% end %>

                              <%= button_to admin_risk_factor_definition_path(definition), method: :delete, class: "btn btn-circle btn-ghost btn-sm text-error", form: { data: { turbo_confirm: "Are you sure you want to delete this risk factor definition?" } } do %>
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                </svg>
                              <% end %>
                            </div>
                          </td>
                        </tr>
                      <% end %>
                    </tbody>
                  </table>
                </div>
              </div>
            <% else %>
              <div class="alert text-center py-4 bg-base-200 rounded-box">
                <p class="text-base-content/60">No company risk factors defined for this category.</p>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
</div>