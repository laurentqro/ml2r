<p style="color: green"><%= notice %></p>

<% content_for :title, "People" %>

<h1 class="py-4">Clients</h1>

<div class="px-2 sm:px-6 lg:px-4">
  <div class="mt-8 flow-root border-black">
    <div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
      <div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
        <%= render 'shared/pagination', collection: @clients %>
        <table class="min-w-full divide-y divide-gray-300">
          <thead>
            <tr>
              <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-0">Name</th>
              <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Type</th>
              <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Country</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200">
            <% @clients.each do |client| %>
              <% clientable = client.clientable %>
              <tr>
                <td class="text-wrap whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:pl-0">
                  <%= link_to clientable.display_name, client %>
                </td>
                <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                  <%= client.clientable_type %>
                </td>
                <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                  <%= ISO3166::Country.new(clientable.country)&.iso_short_name %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <%= render 'shared/pagination', collection: @clients %>
      </div>
    </div>
  </div>
</div>
