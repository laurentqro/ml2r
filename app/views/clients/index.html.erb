<% if notice %>
  <div class="p-4 mb-4 text-green-700 bg-green-100 rounded-lg">
    <%= notice %>
  </div>
<% end %>

<% content_for :title, "Clients" %>

<div class="sm:flex sm:items-center">
  <div class="sm:flex-auto">
    <h1 class="text-base font-semibold text-gray-900">Clients</h1>
  </div>
  <div class="mt-4 sm:ml-16 sm:mt-0 sm:flex-none space-x-4">
    <%= link_to "New Person Client", new_client_path(nature: "person"),
        class: "btn-primary" %>
    <%= link_to "New Company Client", new_client_path(nature: "company"),
        class: "btn-primary" %>
  </div>
</div>

<%= render "statistics" %>

<div class="border-b border-gray-200">
  <nav class="-mb-px flex space-x-8" aria-label="Tabs">
    <%= link_to "Persons", clients_path(nature: 'person'),
        class: "#{params[:nature].nil? || params[:nature] == 'person' ? 'border-blue-500 text-blue-600' : 'border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700'} whitespace-nowrap border-b-2 py-4 px-1 text-sm font-medium" %>
    <%= link_to "Companies", clients_path(nature: 'company'),
        class: "#{params[:nature] == 'company' ? 'border-blue-500 text-blue-600' : 'border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700'} whitespace-nowrap border-b-2 py-4 px-1 text-sm font-medium" %>
  </nav>
</div>

<div class="mt-8 flow-root">
  <div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
    <div class="inline-block min-w-full py-2 align-middle">
      <%= render 'shared/pagination', collection: @clients %>

      <div class="bg-white shadow ring-1 ring-gray-300 sm:rounded-lg overflow-hidden">
        <table class="min-w-full divide-y divide-gray-300">
          <thead class="bg-gray-50">
            <tr class="border-x border-gray-300">
              <th scope="col" rowspan="2" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-6 first:sm:rounded-tl-lg border-r border-gray-300">
                Name
              </th>
              <th scope="col" colspan="6" class="px-3 py-2 text-center text-sm font-semibold text-gray-900 border-b border-gray-300">
                Risk Assessment
              </th>
            </tr>
            <tr class="border-x border-gray-300">
              <th scope="col" class="px-3 py-2 text-center text-sm font-semibold text-gray-900 border-r border-gray-300">
                Country
              </th>
              <th scope="col" class="px-3 py-2 text-center text-sm font-semibold text-gray-900 border-r border-gray-300">
                Client
              </th>
              <th scope="col" class="px-3 py-2 text-center text-sm font-semibold text-gray-900 border-r border-gray-300">
                Services
              </th>
              <th scope="col" class="px-3 py-2 text-center text-sm font-semibold text-gray-900 border-r border-gray-300">
                Distribution
              </th>
              <th scope="col" class="px-3 py-2 text-center text-sm font-semibold text-gray-900 border-r border-gray-300">
                Transaction
              </th>
              <th scope="col" class="px-3 py-2 text-center text-sm font-semibold text-gray-900 last:sm:rounded-tr-lg">
                Total
              </th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200 bg-white">
            <% @clients.each_with_index do |client, index| %>
              <% clientable = client.clientable %>
              <tr class="hover:bg-gray-50 border-x border-gray-300">
                <td class="py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:pl-6 <%= 'sm:rounded-bl-lg' if index == @clients.size - 1 %>">
                  <div class="max-w-md line-clamp-2 flex items-center gap-2">
                    <%= link_to clientable.display_name, client,
                        class: "text-blue-600 hover:text-blue-800" %>
                    <% if clientable.pep? %>
                      <span class="inline-flex items-center rounded-md bg-yellow-50 px-2 py-1 text-xs font-medium text-yellow-800 ring-1 ring-inset ring-yellow-600/20">
                        PEP
                      </span>
                    <% end %>
                    <% if clientable.sanctioned? %>
                      <span class="inline-flex items-center rounded-md bg-red-50 px-2 py-1 text-xs font-medium text-red-800 ring-1 ring-inset ring-red-600/20">
                        Sanctioned
                      </span>
                    <% end %>
                  </div>
                </td>
                <td class="px-3 py-4 text-sm text-gray-500 text-center">
                  <span class="inline-flex items-center rounded-md px-2 py-1 text-xs font-medium <%= risk_badge_class(client.country_risk_score) %>">
                    <%= client.country_risk_score %>
                  </span>
                </td>
                <td class="px-3 py-4 text-sm text-gray-500 text-center">
                  <span class="inline-flex items-center rounded-md px-2 py-1 text-xs font-medium <%= risk_badge_class(client.category_risk_score(:client_risk)) %>">
                    <%= client.category_risk_score(:client_risk) %>
                  </span>
                </td>
                <td class="px-3 py-4 text-sm text-gray-500 text-center">
                  <span class="inline-flex items-center rounded-md px-2 py-1 text-xs font-medium <%= risk_badge_class(client.category_risk_score(:products_and_services_risk)) %>">
                    <%= client.category_risk_score(:products_and_services_risk) %>
                  </span>
                </td>
                <td class="px-3 py-4 text-sm text-gray-500 text-center">
                  <span class="inline-flex items-center rounded-md px-2 py-1 text-xs font-medium <%= risk_badge_class(client.category_risk_score(:distribution_channel_risk)) %>">
                    <%= client.category_risk_score(:distribution_channel_risk) %>
                  </span>
                </td>
                <td class="px-3 py-4 text-sm text-gray-500 text-center">
                  <span class="inline-flex items-center rounded-md px-2 py-1 text-xs font-medium <%= risk_badge_class(client.category_risk_score(:transaction_risk)) %>">
                    <%= client.category_risk_score(:transaction_risk) %>
                  </span>
                </td>
                <td class="px-3 py-4 text-sm text-gray-500 text-center">
                  <span class="inline-flex items-center rounded-md px-2 py-1 text-xs font-medium <%= risk_badge_class(client.total_risk_score) %>">
                    <%= client.total_risk_score %>
                  </span>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <%= render 'shared/pagination', collection: @clients %>
    </div>
  </div>
</div>