<% content_for :title, "Clients" %>

<div class="container mx-auto px-4 py-6">
  <!-- Page Header -->
  <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-6">
    <div>
      <h1 class="text-2xl font-bold flex items-center gap-2">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
        </svg>
        Clients
      </h1>
      <p class="text-sm text-base-content/70">Manage and monitor your client portfolio</p>
    </div>
    
    <div class="mt-4 md:mt-0">
      <div class="join">
        <%= link_to new_person_path, class: "btn btn-primary join-item", data: { turbo: false } do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
            <path d="M8 9a3 3 0 100-6 3 3 0 000 6zM8 11a6 6 0 016 6H2a6 6 0 016-6zM16 7a1 1 0 10-2 0v1h-1a1 1 0 100 2h1v1a1 1 0 102 0v-1h1a1 1 0 100-2h-1V7z" />
          </svg>
          Add Person
        <% end %>
        <%= link_to new_company_path, class: "btn btn-primary join-item", data: { turbo: false } do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h8a2 2 0 012 2v12a1 1 0 110 2h-3a1 1 0 01-1-1v-2a1 1 0 00-1-1H9a1 1 0 00-1 1v2a1 1 0 01-1 1H4a1 1 0 110-2V4zm3 1h2v2H7V5zm2 4H7v2h2V9zm2-4h2v2h-2V5zm2 4h-2v2h2V9z" clip-rule="evenodd" />
          </svg>
          Add Company
        <% end %>
      </div>
    </div>
  </div>

  <!-- Statistics Cards -->
  <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-6">
    <div class="stat bg-base-100 shadow rounded-box">
      <div class="stat-figure text-success">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
      </div>
      <div class="stat-title">Clear</div>
      <div class="stat-value text-success"><%= @clear_count %></div>
      <div class="stat-desc">Clients with no risk flags</div>
    </div>
    
    <div class="stat bg-base-100 shadow rounded-box">
      <div class="stat-figure <%= @with_adverse_media_count.positive? ? 'text-warning' : 'text-success' %>">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
        </svg>
      </div>
      <div class="stat-title">Adverse Media</div>
      <div class="stat-value <%= @with_adverse_media_count.positive? ? 'text-warning' : 'text-success' %>"><%= @with_adverse_media_count %></div>
      <div class="stat-desc">Clients with adverse media mentions</div>
    </div>
    
    <div class="stat bg-base-100 shadow rounded-box">
      <div class="stat-figure <%= @pep_count.positive? ? 'text-error' : 'text-success' %>">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
        </svg>
      </div>
      <div class="stat-title">PEP</div>
      <div class="stat-value <%= @pep_count.positive? ? 'text-error' : 'text-success' %>"><%= @pep_count %></div>
      <div class="stat-desc">Politically exposed persons</div>
    </div>
    
    <div class="stat bg-base-100 shadow rounded-box">
      <div class="stat-figure <%= @sanctioned_count.positive? ? 'text-error' : 'text-success' %>">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
        </svg>
      </div>
      <div class="stat-title">Sanctioned</div>
      <div class="stat-value <%= @sanctioned_count.positive? ? 'text-error' : 'text-success' %>"><%= @sanctioned_count %></div>
      <div class="stat-desc">Clients on sanctions lists</div>
    </div>
  </div>

  <!-- Tabs and Search -->
  <%= render "shared/tabs_and_search" %>

  <!-- Results Section -->
  <div class="card bg-base-100 shadow-md">
    <div class="card-body p-0">
      <%= turbo_frame_tag "search_results" do %>
        <!-- Pagination Top -->
        <div id="clients_pagination" class="p-4 border-b border-base-200">
          <%= render 'shared/pagination', collection: @client_risk_summaries %>
        </div>

        <!-- Table -->
        <div id="clients_table">
          <%= render "table", client_risk_summaries: @client_risk_summaries %>
        </div>

        <!-- Pagination Bottom -->
        <div id="clients_pagination" class="p-4 border-t border-base-200">
          <%= render 'shared/pagination', collection: @client_risk_summaries %>
        </div>
      <% end %>
    </div>
  </div>
</div>
