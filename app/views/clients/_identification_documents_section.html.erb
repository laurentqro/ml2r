<div class="card bg-base-100 p-6">
  <h2 class="card-title">Identification Documents</h2>

    <% if documents.none? %>
      <p class="text-base-content/60">Missing</p>
    <% end %>

  <div class="space-y-4">
    <% documents.each do |document| %>
      <div class="bg-base-200 p-4 rounded-lg">
        <div class="grid grid-cols-1 gap-x-6 gap-y-2 sm:grid-cols-3">
          <div>
            <span class="text-sm font-medium text-base-content/60">Type</span>
            <p class="mt-1 text-sm"><%= document.document_type %></p>
          </div>

          <div>
            <span class="text-sm font-medium text-base-content/60">Number</span>
            <p class="mt-1 text-sm"><%= document.number %></p>
          </div>

          <div>
            <span class="text-sm font-medium text-base-content/60">Expiration Date</span>
            <p class="mt-1 text-sm">
              <%= document.expiration_date.strftime("%d/%m/%Y") %>
              <% if document.expiration_date < Date.current %>
                <span class="ml-2 badge badge-error badge-sm">
                  Expired
                </span>
              <% elsif document.expiration_date < 6.months.from_now %>
                <span class="ml-2 badge badge-warning badge-sm">
                  Expiring Soon
                </span>
              <% end %>
            </p>
          </div>

          <% if document.is_copy %>
            <div class="sm:col-span-3">
              <span class="badge badge-neutral badge-sm">
                Copy
              </span>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div> 