<div class="card bg-base-100 shadow-md" 
     data-controller="chart"
     data-chart-scores-value="<%= [
       client.country_risk_score,
       client.client_risk_score,
       client.products_and_services_risk_score,
       client.distribution_channel_risk_score,
       client.transaction_risk_score
     ].to_json %>"
     data-chart-total-score-value="<%= client.total_risk_score %>">
  <div class="card-body">
    <div class="flex items-center gap-2 mb-4">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd" />
      </svg>
      <h2 class="card-title">Risk Profile</h2>
      
      <div class="ml-auto">
        <div class="badge badge-lg <%= client.total_risk_score > 75 ? 'badge-error' : (client.total_risk_score > 50 ? 'badge-warning' : 'badge-success') %> gap-1">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 1.944A11.954 11.954 0 012.166 5C2.056 5.649 2 6.319 2 7c0 5.225 3.34 9.67 8 11.317C14.66 16.67 18 12.225 18 7c0-.682-.057-1.35-.166-2.001A11.954 11.954 0 0110 1.944zM11 14a1 1 0 11-2 0 1 1 0 012 0zm0-7a1 1 0 10-2 0v3a1 1 0 102 0V7z" clip-rule="evenodd" />
          </svg>
          Total Score: <%= client.total_risk_score %>
        </div>
      </div>
    </div>

    <div class="alert alert-info mb-6">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
      </svg>
      <div>
        <p class="text-sm">
          Visual representation of the risk associated with this client, based on the scores of the risk factors in the risk assessment.
        </p>
      </div>
    </div>

    <div class="bg-base-200 rounded-lg p-6">
      <div class="w-full max-w-lg mx-auto">
        <canvas id="riskRadarChart" data-chart-target="canvas"></canvas>
      </div>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-5 gap-2 mt-6">
      <div class="stat bg-base-200 p-2 rounded-lg">
        <div class="stat-title text-xs">Country</div>
        <div class="stat-value text-sm <%= client.country_risk_score > 75 ? 'text-error' : (client.country_risk_score > 50 ? 'text-warning' : 'text-success') %>">
          <%= client.country_risk_score %>
        </div>
      </div>
      
      <div class="stat bg-base-200 p-2 rounded-lg">
        <div class="stat-title text-xs">Client</div>
        <div class="stat-value text-sm <%= client.client_risk_score > 75 ? 'text-error' : (client.client_risk_score > 50 ? 'text-warning' : 'text-success') %>">
          <%= client.client_risk_score %>
        </div>
      </div>
      
      <div class="stat bg-base-200 p-2 rounded-lg">
        <div class="stat-title text-xs">Services</div>
        <div class="stat-value text-sm <%= client.products_and_services_risk_score > 75 ? 'text-error' : (client.products_and_services_risk_score > 50 ? 'text-warning' : 'text-success') %>">
          <%= client.products_and_services_risk_score %>
        </div>
      </div>
      
      <div class="stat bg-base-200 p-2 rounded-lg">
        <div class="stat-title text-xs">Distribution</div>
        <div class="stat-value text-sm <%= client.distribution_channel_risk_score > 75 ? 'text-error' : (client.distribution_channel_risk_score > 50 ? 'text-warning' : 'text-success') %>">
          <%= client.distribution_channel_risk_score %>
        </div>
      </div>
      
      <div class="stat bg-base-200 p-2 rounded-lg">
        <div class="stat-title text-xs">Transaction</div>
        <div class="stat-value text-sm <%= client.transaction_risk_score > 75 ? 'text-error' : (client.transaction_risk_score > 50 ? 'text-warning' : 'text-success') %>">
          <%= client.transaction_risk_score %>
        </div>
      </div>
    </div>
  </div>
</div>
