<div class="bg-white shadow rounded-lg p-6">
  <div class="flex items-center justify-between mb-4">
    <h2 class="text-xl font-bold text-gray-900">Risk Factors</h2>
    <%= link_to edit_client_path(client), 
        class: "px-3 py-2 text-sm font-medium text-blue-600 hover:text-blue-800 
                hover:bg-blue-50 rounded-lg transition-colors" do %>
      <span class="flex items-center gap-1">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-4 h-4">
          <path d="m5.433 13.917 1.262-3.155A4 4 0 0 1 7.58 9.42l6.92-6.918a2.121 2.121 0 0 1 3 3l-6.92 6.918c-.383.383-.84.685-1.343.886l-3.154 1.262a.5.5 0 0 1-.65-.65Z" />
          <path d="M3.5 5.75c0-.69.56-1.25 1.25-1.25H10A.75.75 0 0 0 10 3H4.75A2.75 2.75 0 0 0 2 5.75v9.5A2.75 2.75 0 0 0 4.75 18h9.5A2.75 2.75 0 0 0 17 15.25V10a.75.75 0 0 0-1.5 0v5.25c0 .69-.56 1.25-1.25-1.25h-9.5c-.69 0-1.25-.56-1.25-1.25v-9.5Z" />
        </svg>
        Update Risk Factors
      </span>
    <% end %>
  </div>

  <div class="space-y-8">
    <% client.available_risk_categories.each do |category| %>
      <% risk_factors = client.risk_factor_class.where(client: client, category: category) %>
      <% category_score = client.category_risk_score(category) %>

      <% if risk_factors.any? %>
        <div>
          <div class="flex items-center justify-between mb-4">
            <h3 class="text-sm font-bold text-gray-900">
              <%= category.titleize %> Factors
            </h3>
            <span class="inline-flex items-center rounded-md px-2 py-1 text-xs font-medium <%= risk_badge_class(category_score) %>">
              Score: <%= category_score %>
            </span>
          </div>

          <div class="space-y-3">
            <% risk_factors.each do |risk_factor| %>
              <div class="flex items-start gap-x-3">
                <div class="flex-shrink-0">
                  <svg class="h-5 w-5 text-red-500" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M10.339 2.237a.75.75 0 00-1.178 0L2.18 11.66A.75.75 0 002.756 13h13.988a.75.75 0 00.576-1.34L10.339 2.237zM10 7a.75.75 0 01.75.75v2a.75.75 0 01-1.5 0v-2A.75.75 0 0110 7zm0 5a1 1 0 100 2 1 1 0 000-2z" clip-rule="evenodd" />
                  </svg>
                </div>
                <div>
                  <p class="text-sm text-gray-900">
                    <%= risk_factor.description %>
                  </p>
                  <% if risk_factor.notes.present? %>
                    <p class="mt-1 text-sm text-gray-500">
                      <%= risk_factor.notes %>
                    </p>
                  <% end %>
                  <p class="mt-1 text-xs text-gray-500">
                    Identified on <%= risk_factor.created_at.strftime("%B %d, %Y") %>
                  </p>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    <% end %>

    <% if client.total_risk_factors_score > 0 %>
      <div class="border-t pt-4">
        <div class="flex items-center justify-between">
          <span class="text-sm font-bold text-gray-900">Total</span>
          <span class="inline-flex items-center rounded-md px-2 py-1 text-xs font-medium <%= risk_badge_class(client.total_risk_factors_score) %>">
            <%= client.total_risk_factors_score %>
          </span>
        </div>
      </div>
    <% end %>
  </div>
</div> 