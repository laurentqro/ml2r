<%= turbo_frame_tag "kyc_note" do %>
  <div class="p-4 bg-white rounded-md shadow">
    <div class="flex justify-between items-start mb-4">
      <h3 class="text-lg font-bold text-gray-900">KYC Notes</h3>
      <%= link_to "Edit", edit_client_path(client, format: :turbo_stream), 
                  class: "px-3 py-1 text-sm text-blue-600 hover:text-blue-800 hover:underline" %>
    </div>

    <div class="prose max-w-none">
      <% if client.notes.present? %>
        <p class="text-gray-700 whitespace-pre-wrap"><%= client.notes %></p>
      <% else %>
        <p class="text-gray-500 italic">No notes available</p>
      <% end %>
    </div>
  </div>
<% end %>