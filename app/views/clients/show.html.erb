<% content_for :title, "#{@client.clientable.display_name}" %>

<% if notice %>
  <div class="p-4 mb-4 text-green-700 bg-green-100 rounded-lg">
    <%= notice %>
  </div>
<% end %>

<div class="mx-auto px-4 sm:px-6 lg:px-8 py-2">
  <div class="mb-4 text-sm text-gray-500">
    <p>Client since <%= @client.created_at.strftime("%d %B %Y") %></p>
  </div>

  <div class="mx-auto space-y-8">
    <%= render "client_header", clientable: @client.clientable %>

    <%= render "kyc_notes_show", client: @client %>

    <%= render "risk_radar", client: @client %>

    <%= render "company_relationships/index", company: @client.clientable if @client.clientable_type == "Company" %>

    <%= render "identification_documents_section", documents: @client.clientable.identification_documents %>

    <%= render "overall_risk_score", client: @client %>

    <%= render "country_risk_scores", client: @client %>

    <%= render "risk_factors_section", client: @client %>

    <%= render "adverse_media_checks_section", client: @client %>

    <%= render "screenings_section", client: @client %>
  </div>
</div>
