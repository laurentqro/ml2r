<% if notice %>
  <div class="p-4 mb-4 text-green-700 bg-green-100 rounded-lg">
    <%= notice %>
  </div>
<% end %>

<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="max-w-3xl mx-auto space-y-8">
    <div class="bg-white shadow rounded-lg p-6">
      <div class="flex items-center justify-between mb-4">
        <h1 class="text-2xl font-bold text-gray-900">
          <%= @client.clientable.display_name %>
        </h1>
        <div class="flex gap-2">
          <% if @client.clientable.pep? %>
            <span class="px-3 py-1 text-sm font-semibold text-white bg-red-600 rounded-full">
              PEP
            </span>
          <% end %>
          <% if @client.clientable.sanctioned? %>
            <span class="px-3 py-1 text-sm font-semibold text-white bg-red-600 rounded-full">
              Sanctioned
            </span>
          <% end %>
        </div>
      </div>

      <div class="mb-4">
        <span class="font-semibold text-gray-700">Client since:</span>
        <span class="text-gray-600"><%= @client.created_at.strftime("%B %d, %Y") %></span>
      </div>

      <div class="border-t pt-4">
        <%= render "people/person", person: @client.clientable if @client.clientable_type == "Person" %>
        <%= render "companies/company", company: @client.clientable if @client.clientable_type == "Company" %>
      </div>
    </div>

    <% if @client.clientable_type == "Person" && @client.clientable.identification_documents.any? %>
      <div class="bg-white shadow rounded-lg p-6">
        <h2 class="text-xl font-bold text-gray-900 mb-4">Identification Documents</h2>

        <div class="space-y-4">
          <% @client.clientable.identification_documents.each do |document| %>
            <div class="bg-gray-50 p-4 rounded-lg">
              <div class="grid grid-cols-1 gap-x-6 gap-y-2 sm:grid-cols-3">
                <div>
                  <span class="text-sm font-medium text-gray-500">Type</span>
                  <p class="mt-1 text-sm text-gray-900"><%= document.document_type %></p>
                </div>

                <div>
                  <span class="text-sm font-medium text-gray-500">Number</span>
                  <p class="mt-1 text-sm text-gray-900"><%= document.number %></p>
                </div>

                <div>
                  <span class="text-sm font-medium text-gray-500">Expiration Date</span>
                  <p class="mt-1 text-sm text-gray-900">
                    <%= document.expiration_date.strftime("%d/%m/%Y") %>
                    <% if document.expiration_date < Date.current %>
                      <span class="ml-2 inline-flex items-center rounded-md bg-red-50 px-2 py-1 text-xs font-medium text-red-700 ring-1 ring-inset ring-red-600/10">
                        Expired
                      </span>
                    <% elsif document.expiration_date < 6.months.from_now %>
                      <span class="ml-2 inline-flex items-center rounded-md bg-yellow-50 px-2 py-1 text-xs font-medium text-yellow-800 ring-1 ring-inset ring-yellow-600/20">
                        Expiring Soon
                      </span>
                    <% end %>
                  </p>
                </div>

                <% if document.is_copy %>
                  <div class="sm:col-span-3">
                    <span class="inline-flex items-center rounded-md bg-gray-50 px-2 py-1 text-xs font-medium text-gray-600 ring-1 ring-inset ring-gray-500/10">
                      Copy
                    </span>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>

    <%= render "country_risk_scores", client: @client %>

    <%= render "risk_factors_section", client: @client %>

    <div class="bg-white shadow rounded-lg p-6">
      <h2 class="text-xl font-bold text-gray-900 mb-4">Screenings</h2>

      <div class="space-y-2 mb-6">
        <% @client.clientable.screenings.reverse.each do |screening| %>
          <div class="flex items-center justify-between">
            <div class="flex items-center">
              <div class="w-2 h-2 bg-blue-500 rounded-full mr-3"></div>
              <%= link_to screening.created_at.strftime("%B %d, %Y at %I:%M:%S %p"),
                          client_screening_path(@client, screening),
                          class: "text-blue-600 hover:text-blue-800 hover:underline" %>
            </div>
            <span class="text-sm text-gray-600">
              <%= pluralize(screening.matches.count, 'match') %>
          </div>
        <% end %>
      </div>

      <%= form_with(model: [@client, @screening], data: { turbo: false }, class: "mt-4") do |form| %>
        <%= form.hidden_field :query, value: @client.clientable.name.downcase %>
        <%= form.hidden_field :screenable_id, value: @client.clientable_id %>
        <%= form.hidden_field :screenable_type, value: @client.clientable_type %>

        <%= form.submit "Run a new screening",
            class: "w-full sm:w-auto px-4 py-2 bg-blue-600 text-white rounded-lg
                   hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500
                   focus:ring-offset-2 transition-colors" %>
      <% end %>
    </div>
  </div>
</div>
