<% if notice %>
  <div class="p-4 mb-4 text-green-700 bg-green-100 rounded-lg">
    <%= notice %>
  </div>
<% end %>

<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="max-w-3xl mx-auto space-y-8">
    <div class="bg-white shadow rounded-lg p-6">
      <div class="flex items-center justify-between mb-4">
        <h1 class="text-2xl font-bold text-gray-900">
          <%= @client.clientable.display_name %>
        </h1>
        <div class="flex gap-2">
          <% if @client.clientable.pep? %>
            <span class="px-3 py-1 text-sm font-semibold text-white bg-red-600 rounded-full">
              PEP
            </span>
          <% end %>
          <% if @client.clientable.sanctioned? %>
            <span class="px-3 py-1 text-sm font-semibold text-white bg-red-600 rounded-full">
              Sanctioned
            </span>
          <% end %>
        </div>
      </div>

      <div class="mb-4">
        <span class="font-semibold text-gray-700">Client since:</span>
        <span class="text-gray-600"><%= @client.created_at.strftime("%B %d, %Y") %></span>
      </div>

      <div class="border-t pt-4">
        <%= render "people/person", person: @client.clientable if @client.clientable_type == "Person" %>
        <%= render "companies/company", company: @client.clientable if @client.clientable_type == "Company" %>
      </div>
    </div>

    <% if @client.clientable.identification_documents.any? %>
      <%= render "identification_documents_section", documents: @client.clientable.identification_documents %>
    <% end %>

    <%= render "country_risk_scores", client: @client %>

    <%= render "risk_factors_section", client: @client %>

    <% if @client.available_risk_categories.any? { |category| @client.risk_factor_class.where(client: @client, category: category).any? } %>
      <div class="bg-white shadow rounded-lg p-6 mt-4">
        <div class="flex flex-col">
          <div class="flex items-center justify-between">
            <div>
              <span class="text-lg font-bold text-gray-900">Overall Risk Score</span>
              <p class="mt-1 text-xs text-gray-500">
                Calculated on <%= @client.risk_scoresheets.last.created_at.strftime("%B %d, %Y") %>
              </p>
            </div>
            <span class="inline-flex items-center rounded-md px-4 py-2 text-base font-medium <%= risk_badge_class(@client.total_risk_score) %>">
              <%= @client.risk_scoresheets.current.total_risk_score %>
            </span>
          </div>
        </div>
      </div>
    <% end %>

    <%= render "screenings_section", client: @client %>
  </div>
</div>
