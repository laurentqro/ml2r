<div class="card bg-base-100 p-6">
  <div class="flex items-center justify-between pb-4">
    <div class="flex items-center gap-2">
      <h1 class="py-0"><%= clientable.display_name %></h1>

      <div class="flex items-center gap-2">
        <% if clientable.pep? %>
          <span class="badge badge-error">PEP</span>
        <% end %>

        <% if clientable.sanctioned? %>
          <span class="badge badge-error">Sanctioned</span>
        <% end %>

        <% if clientable.adverse_media_checks.any?(&:adverse_media_found?) %>
          <span class="badge badge-error">
            Adverse Media Found
          </span>
        <% end %>
      </div>
    </div>

    <div>
      <%= link_to edit_clientable_path(clientable), class: "btn btn-primary btn-sm flex items-center gap-2" do %>
        <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L10.582 16.07a4.5 4.5 0 01-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 011.13-1.897l8.932-8.931zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0115.75 21H5.25A2.25 2.25 0 013 18.75V8.25A2.25 2.25 0 015.25 6H10" />
        </svg>
        Edit
      <% end %>
    </div>
  </div>

  <div class="divider"></div>

  <div>
    <%= render clientable, clientable: clientable %>
  </div>
</div>