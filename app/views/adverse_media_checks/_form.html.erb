<%= form_with(model: AdverseMediaCheck.new(adverse_media_checkable: adverse_media_checkable), data: { turbo: true }) do |form| %>
  <%= form.hidden_field :adverse_media_checkable_id, value: adverse_media_checkable.id %>
  <%= form.hidden_field :adverse_media_checkable_type, value: adverse_media_checkable.class.name %>
  <%= form.submit "Run a new adverse media check",
    class: "btn btn-primary"
  %>
<% end %>